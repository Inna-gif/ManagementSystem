@model ASP_proj.Models.Driver

@{
    ViewData["Title"] = "Driver details";
}

<h2>Driver details</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.DriverId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Password hash</dt>
    <dd class="col-sm-10">@Model.PasswordHash</dd>
</dl>

<a href="/Drivers/Index" class="btn btn-secondary">Back</a>
<a href="/Drivers/Edit/@Model.DriverId" class="btn btn-warning">Edit</a>