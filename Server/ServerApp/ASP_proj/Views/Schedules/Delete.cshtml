@model ASP_proj.Models.Schedule

@{
    ViewData["Title"] = "Delete schedule";
}

<h2>Delete schedule</h2>

<p>Are you sure you want to delete this schedule?</p>

<dl class="row">
    <dt class="col-sm-2">Driver Id</dt>
    <dd class="col-sm-10">@Model.DriverId</dd>

    <dt class="col-sm-2">Route Id</dt>
    <dd class="col-sm-10">@Model.RouteId</dd>

    <dt class="col-sm-2">Departure</dt>
    <dd class="col-sm-10">@Model.DepartureTime</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<form action="/Schedules/Delete/@Model.ScheduleId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Schedules/Index" class="btn btn-secondary">Cancel</a>
</form>