@model IEnumerable<ASP_proj.Models.Schedule>

@{
    ViewData["Title"] = "Schedules";
}

<h2>Schedules</h2>

<p>
    <a href="/Schedules/Create" class="btn btn-primary">Create new schedule</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>DriverId</th>
            <th>RouteId</th>
            <th>Departure time</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.ScheduleId</td>
                <td>@s.DriverId</td>
                <td>@s.RouteId</td>
                <td>@s.DepartureTime</td>
                <td>@s.Status</td>
                <td>
                    <a href="/Schedules/Details/@s.ScheduleId" class="btn btn-sm btn-info">Details</a>
                    <a href="/Schedules/Edit/@s.ScheduleId" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Schedules/Delete/@s.ScheduleId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>