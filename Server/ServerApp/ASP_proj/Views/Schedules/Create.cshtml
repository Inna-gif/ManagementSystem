@model ASP_proj.Models.Schedule

@{
    ViewData["Title"] = "Create schedule";
}

<h2>Create schedule</h2>

<form action="/Schedules/Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Driver Id</label>
        <input name="DriverId" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Route Id</label>
        <input name="RouteId" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Departure time</label>
        <input name="DepartureTime" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Status</label>
        <input name="Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/Schedules/Index" class="btn btn-secondary">Back</a>
</form>